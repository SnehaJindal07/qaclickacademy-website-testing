<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">


<suite name="Suite" parallel = "tests">

    <listeners>
        <listener class-name="Academic.E2EProject.Listeners"/>
    </listeners>

    <test name="Validating Title in Chrome">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="Academic.E2EProject.ValidateTitle"/>
        </classes>
    </test>

    <test name="Validating Title in Firefox">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="Academic.E2EProject.ValidateTitle"/>
        </classes>
    </test>

    <test name="Validating Navigation Bar in Chrome">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="Academic.E2EProject.ValidateNavigationBar"/>
        </classes>
    </test>

    <test name="Validating Navigation Bar in Firefox">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="Academic.E2EProject.ValidateNavigationBar"/>
        </classes>
    </test>

    <test name="Validating Registration">
        <classes>
            <class name="Academic.E2EProject.SignUpPage"/>
        </classes>
    </test>

    <test name="Validating User Login">
        <classes>
            <class name="Academic.E2EProject.LoginPage"/>
        </classes>
    </test>

    <test name="Validating Practice Page in Chrome">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="Academic.E2EProject.PracticePage"/>
        </classes>
    </test>

    <test name="Validating Practice Page in Firefox">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="Academic.E2EProject.PracticePage"/>
        </classes>
    </test>

</suite> <!-- Suite -->
